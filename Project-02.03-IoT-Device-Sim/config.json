{
  "mqttServer": "mqtt://localhost:6883",
  "topicBase": "device_id/temperature",
  "numberOfDevices": 2,
  "publishInterval": "*/5 * * * * *",
  "outOfBoundRate": 0.4,
  "temperatureSettings": {
    "C": {
      "normalRange": [10, 50],
      "outOfBoundRange": [-100, -50]
    },
    "F": {
      "normalRange": [14, 122],
      "outOfBoundRange": [-212, -58]
    },
    "K": {
      "normalRange": [263.15, 323.15],
      "outOfBoundRange": [-373.15, -223.15]
    }
  }
}